<h2>Result index</h2>

<table class= "table table-hover table-inverse">
  <tbody>
    <% @items.each do |item| %>
      <tr>
				<th><%= item.id %></th>
				<th><%= link_to item.name, admin_item_path(item) %></th>
				<th><%= item.price %></th>
				<th><%= item.genre.name %></th>
				<th><% if item.is_enabled == true %>
					販売中
					<% else %>
					販売停止中
					<% end %>
				</th>
			</tr>
			<% end %>
  </tbody>
</table>
