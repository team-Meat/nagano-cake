<table class='table'>
  <thead>
    <tr>
      <th><h1 style="margin">商品一覧(全<%= @items.count %>件)</h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><% image_tag item.image %></td>
      <td><% item.name %></td>
      <td><% item.introduction %></td>
      <td></td>
    </tr>
    <% end %>
    <div style="text-align-center;"><%= pagenate @items></div>
   </tbody>
 </table>