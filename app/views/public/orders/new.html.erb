
	<div class="panel panel-warning">
		<div class="panel-heading">
	<h2><span class="label label-default">注文情報入力</span></h2>
	</div>

  <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
	<%= f.label :payment, "支払い方法" %>
	<br>
	<%= f.radio_button :payment,:クレジットカード,  checked: "checked" %>
	<%= f.label :payment, "クレジットカード" %>
	<br>
	<%= f.radio_button :payment, :銀行振込 %>
	<%= f.label :payment, "銀行振込" %>
	<br>
	<%= f.label :address, "お届け先" %>
	<br>

	<%= f.radio_button :address_option, 1, checked: "checked" %>
	<%= f.label :street_address, "ご自身の住所" %>
	<%= @customer.postcode %>
	<%= @customer.address %>
	<br>
	<%= f.radio_button :address_option, 2 %>

	<%= f.label :street_address, "登録済住所から選択" %>
	<%= f.collection_select :registered, @addresses, :id, :address, :include_blank => "選択してください" %>

  <br>
	<%= f.radio_button :address_option, 3 %>
	<%= f.label :address_option, "新しいお届け先" %>
	<br>

	<%= f.label :receive_name, "宛名" %>
	<%= f.text_field :receive_name %>
	<br>

	<%= f.label :postal_code, "郵便番号" %>
	<%= f.text_field :postal_code %>
	<br>

	<%= f.label :street_address, "住所" %>
	<%= f.text_field :street_address %>
	<br>

	<%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
<% end %>