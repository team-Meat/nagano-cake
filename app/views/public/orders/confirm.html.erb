<div class="row">
    <h3><strong>注文情報確認</strong></h3>
    <div class="col-xs-10">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>  </th>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag( cart_item.item, :image, size: "60x50", fallback: "no_image.jpg") %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_item.item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %>
              </td>
              <td class="text-right">
                  <%= cart_item.quantity %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_item.item.price_without_tax * 1.1).floor * cart_item.quantity).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              <!-- sessiomのデータを表示する場合、カラム名に""つける -->
              ¥800
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
             ¥<%= @total %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
             <td><%= @total + 800 %></td>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
  <strong class="red-border px-3 mr-3">お支払い方法</strong>
        <span class="brown-border px-3"><%= @order.payment %></span>
      </div>

      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">　お届け先　</strong>
        <span class="brown-border px-3">
          <!-- うけとった文字列が8けたより少なければ -->
          <% if  @customer.address.length < 8 %>
           <%= "〒" + @order.postal_code.to_s + "  " + @order.street_address.to_s + "  " + @customer.last_name + @customer.first_name %><span>様</span>

          <!-- 受け取った文字列がそれ以外なら -->
          <% else %>
            <%= @customer.address %><span>様</span><br>
          <% end %>
        </span>
      </div>
    </div>

    <div class="col-10">
      <span>　　 　　</span><br><%=link_to "購入を確定する", orders_create_order_path, class: "btn btn-danger" %>
    </div>

  </div>
</div>