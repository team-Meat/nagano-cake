

<div class ="container">
  <div class ="row">
  <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @name_address,url: name_address_path(@name_address.id),method: :patch do |f| %>

    <div class ="form-group">
      <label for ="postcode">郵便番号</label>
      <p><%= f.text_field :postcode %></p>
    </div>

    <div class ="form-group">
      <label for ="address">住所</label>
      <p><%= f.text_field :address %></p>
    </div>

    <div class ="form-group">
     <label for ="address_name">姓</label>
     <p><%= f.text_field :address_name %></p>
    </div>



    <div><%= f.submit '編集内容を保存', class: "btn btn-success" %></div>
    <% end %>
  </div>
  </div>