<div class="row">
<h2>ジャンル一覧・追加</h2>

<%= form_for(@genre, url:'/admin/genres') do |f| %>
</br>
</br>
	<h4>ジャンル</h4>
	<%= f.text_field :name %>
	</br>
	<%= f.submit '追加', class: 'btn btn-primary' %>
<%end%>

<table class="table table-bordere">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>